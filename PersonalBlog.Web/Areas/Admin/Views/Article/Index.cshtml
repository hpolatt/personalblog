@model List<ArticleDto>
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fx-bold py-3 mb-4">
        <span class="text-muted fw-light">Article Managment/</span>Articles
    </h4>
<div class="card">
  <div class="table-responsive text-nowrap m-5">
    <a class="btn btn-success" asp-area="Admin" asp-controller="Article" asp-action="Add">New Article
      <i class="bx bx-plus"></i>
    </a>
    <table class="table table-bordered" id="articlesTable" width="100%" cellspacing="0">
      <thead>
        <tr>
          <th>Title</th>
          <th>Category</th>
          <th>Created At</th>
          <th>Created By</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      @* <tfoot>
        <tr>
          <th>Title</th>
          <th>Category</th>
          <th>Created At</th>
          <th>Created By</th>
          <th>Actions</th>
        </tr>
      <tbody class="table-border-bottom-0"> *@
      @foreach (var article in Model)
      {
        <tr name="@article.Id">
          <td>@article.Title</td>
          <td>@article.Category?.Name</td>
          <td>@article.CreatedTime</td>
          <td>@article.CreatedBy</td>
          <td>@(article.IsDeleted? "DeActive": "Active")</td>
          <td>
            <a class="btn btn-sm btn-primary" data-id="@article.Id" asp-area="Admin" asp-controller="Article" asp-action="Update" asp-route-articleId="@article.Id"><i class="bx bx-edit"></i></a>
            <a class="btn btn-sm btn-info" data-id="@article.Id" asp-area="Admin" asp-controller="Article" asp-action="Info" asp-route-articleId="@article.Id"><i class='bx bx-info-circle' ></i></a>
            <a class="btn btn-sm btn-danger" data-id="@article.Id" asp-area="Admin" asp-controller="Article" asp-action="Delete" asp-route-articleId="@article.Id"><i class="bx bx-trash"></i></a>
          </td>
        </tr>
      }
      </tbody>
    </table>
  </div>
</div>
</div>

@section Scripts {
    <script src="~/js/articleIndex.js" type="application/ecmascript"></script>
}