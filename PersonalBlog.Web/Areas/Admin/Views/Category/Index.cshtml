@model IEnumerable<CategoryDetailDto>
<div class="container-xxl flex-grow-1 container-p-y">
  <h4 class="fx-bold py-3 mb-4">
    <span class="text-muted fw-light">Category Managment/</span>Categories
  </h4>
  <div class="card">
    <div class="table-responsive text-nowrap m-5">
      <a class="btn btn-success" asp-area="Admin" asp-controller="Category" asp-action="Add">New Category
        <i class="bx bx-plus"></i>
      </a>
      <table class="table table-bordered" id="articlesTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Created At</th>
            <th>Created By</th>
            <th>Article Count</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        @foreach (var category in Model)
        {
          <tr name="@category.Id">
            <td>@category.Name</td>
            <td>@category.Description</td>
            <td>@category.CreatedTime</td>
            <td>@category.CreatedBy</td>
            <td>@category.Articles.Count</td>
            <td>@(category.IsActive ? "Active" : "DeActive")</td>
            <td>
              <a class="btn btn-sm btn-primary" data-id="@category.Id" asp-area="Admin" asp-controller="Category"
                asp-action="Update" asp-route-categoryId="@category.Id"><i class="bx bx-edit"></i></a>
              <a class="btn btn-sm btn-info" data-id="@category.Id" asp-area="Admin" asp-controller="Category"
                asp-action="Info" asp-route-categoryId="@category.Id"><i class='bx bx-info-circle'></i></a>
              <a class="btn btn-sm btn-danger" data-id="@category.Id" asp-area="Admin" asp-controller="Category"
                asp-action="Delete" asp-route-categoryId="@category.Id"><i class="bx bx-trash"></i></a>
            </td>
          </tr>
        }
        </tbody>
      </table>
    </div>
  </div>
</div>

@section Scripts {
  <script src="~/js/articleIndex.js" type="application/ecmascript"></script>
}